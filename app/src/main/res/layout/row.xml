<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingRight="@dimen/listview_padding"
    android:paddingLeft="@dimen/listview_padding"
    android:layout_marginBottom="@dimen/listview_margin"
    android:layout_marginRight="@dimen/listview_margin"
    android:layout_marginTop="@dimen/listview_margin"
    android:layout_marginLeft="@dimen/listview_margin"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corner_white">


    <TextView
        android:id="@+id/taskName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:text="TASK"
        android:singleLine="true"
        android:layout_marginRight="20dp"/>
    <!-- android:typeface="monospace" -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/taskTime"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="Time" />
    <TextView
        android:id="@+id/taskDate"
        android:layout_below="@+id/taskTime"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="12dp"
        android:text="Date" />
    </RelativeLayout>
    <CheckedTextView
        android:id="@+id/taskStatus"
        android:layout_toRightOf="@+id/taskDate"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:textColor="#000000"
        android:textSize="12dp"
        android:checkMark="?android:attr/textCheckMark"/>

</LinearLayout>